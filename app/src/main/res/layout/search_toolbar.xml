<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/search_background"
    android:id="@+id/search_toolbar_framelayout"
    android:padding="10dp"
    android:layout_marginLeft="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="4dp"
    android:elevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/search_toolbar_image_view"
                android:src="@drawable/ic_search_dark"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:scaleType="center"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/search_toolbar_edit_text"
                android:layout_weight="10"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:theme="@style/AppTheme.SearchEditText"
                android:inputType="text"
                android:hint="@string/search_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/search_toolbar_cancel_button"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/ic_close_dark"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
</FrameLayout>