<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="0dp"
    android:orientation="horizontal"
    android:weightSum="5"
    android:background="@drawable/widget_background"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/widget_logo_imagebutton"
        android:layout_weight="1"
        android:contentDescription="@string/app_name"
        android:padding="8dp"
        android:src="@drawable/ic_logo"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/widget_add_imagebutton"
        android:contentDescription="@string/add_post"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_add_widget_white"
        android:theme="@style/AppTheme.WidgetImageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/widget_home_imagebutton"
        android:contentDescription="@string/bottom_nav_home"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_home_widget_white"
        android:theme="@style/AppTheme.WidgetImageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/widget_search_imagebutton"
        android:contentDescription="@string/bottom_nav_search"
        android:background="?android:attr/selectableItemBackground"
        android:layout_weight="1"
        android:src="@drawable/ic_search_widget_white"
        android:theme="@style/AppTheme.WidgetImageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/widget_profile_imagebutton"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/bottom_nav_profile"
        android:layout_weight="1"
        android:src="@drawable/ic_account_widget_white"
        android:theme="@style/AppTheme.WidgetImageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</LinearLayout>