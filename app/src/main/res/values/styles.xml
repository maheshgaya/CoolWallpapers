<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- for toolbar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- when toolbar is expanded, do not show title for toolbar -->
    <style name="ExpandedTextToolbar">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>


    <style name="AuthTheme" parent="FirebaseUI">
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="colorControlNormal">@color/colorGrey100</item>
            <item name="colorControlActivated">@color/colorLightBlue700</item>
            <item name="colorControlHighlight">@color/colorLightBlue700</item>
            <item name="android:windowBackground">@drawable/auth_ui_logo</item>
    </style>

     <!--buttons -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/profile_button_side_padding</item>
        <item name="android:paddingLeft">@dimen/profile_button_side_padding</item>
        <item name="android:paddingEnd">@dimen/profile_button_side_padding</item>
        <item name="android:paddingRight">@dimen/profile_button_side_padding</item>
        <item name="android:layout_marginBottom">@dimen/profile_button_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/profile_button_vertical_margin</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
