<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- For toolbar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- when toolbar is expanded, do not show title for toolbar -->
    <style name="ExpandedTextToolbar">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <!-- custom theme for Firebase -->
    <style name="AuthTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorGray100</item>
        <item name="colorControlActivated">@color/colorLightBlue700</item>
        <item name="colorControlHighlight">@color/colorGray100</item>
        <item name="android:windowBackground">@drawable/auth_ui_logo</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


     <!--buttons -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/profile_button_side_padding</item>
        <item name="android:paddingLeft">@dimen/profile_button_side_padding</item>
        <item name="android:paddingEnd">@dimen/profile_button_side_padding</item>
        <item name="android:paddingRight">@dimen/profile_button_side_padding</item>
        <item name="android:layout_marginBottom">@dimen/profile_button_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/profile_button_vertical_margin</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- EditText -->
    <style name="AppTheme.EditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:maxLength">30</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorAccent">@color/colorLightBlue300</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
    </style>

    <!-- AutoComplete -->
    <style name="AppTheme.SearchEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:imeOptions">actionSearch|flagNoFullscreen</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/profile_toolbar_text_size</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Back Button for toolbar-->
    <style name="AppTheme.CancelButton" parent="android:Theme.Holo">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_close_white</item>
    </style>

    <style name="AppTheme.NormalEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">@dimen/post_content_padding</item>
        <item name="android:layout_marginBottom">@dimen/post_content_padding</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:drawablePadding">@dimen/post_drawable_content_padding</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:padding">@dimen/post_content_padding</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:actionBarStyle">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="AppTheme.FullScreenActivity" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

</resources>
